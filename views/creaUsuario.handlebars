<div class="p-5">
    <h1>Crear Usuarios</h1>

    <form action="/crearUsuarios" method="post">
        <div class="form-group">
            <label for="username">Nombre Usuario</label>
            <input name="username" type="text" class="form-control" id="username" placeholder="Ingresar Nombre Usuario">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input name="email" type="text" class="form-control" id="email" placeholder="Ingresar Email">
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input name="password" type="text" class="form-control" id="password" placeholder="Contraseña">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>